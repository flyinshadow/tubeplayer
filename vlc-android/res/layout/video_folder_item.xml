<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:vlc="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="media"
            type="org.videolan.medialibrary.media.MediaWrapper"/>

        <variable
            name="time"
            type="String"/>

        <variable
            name="bgColor"
            type="int"/>

        <variable
            name="max"
            type="int"/>

        <variable
            name="progress"
            type="int"/>

        <variable
            name="resolution"
            type="String"/>

        <variable
            name="cover"
            type="android.graphics.drawable.BitmapDrawable"/>

        <variable
            name="scaleType"
            type="android.widget.ImageView.ScaleType"/>

        <variable
            name="holder"
            type="com.wenjoyai.tubeplayer.gui.video.VideoListAdapter.ViewHolder"/>

        <variable
            name="selected"
            type="boolean"/>

        <variable
            name="isAd"
            type="boolean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--ad item-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ad_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{isAd ? View.VISIBLE : View.GONE}"
            >

            <com.facebook.ads.MediaView
                android:id="@+id/ad_media"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/half_default_margin"
                android:gravity="center"
                vlc:layout_constraintBottom_toBottomOf="parent"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintTop_toTopOf="parent"
                />

            <LinearLayout
                android:id="@+id/ad_choices_container"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="start"
                android:orientation="horizontal"
                vlc:layout_constraintStart_toStartOf="@+id/ad_media"
                vlc:layout_constraintTop_toTopOf="@+id/ad_media"
                />

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/info_default_margin"
                android:layout_marginStart="@dimen/info_default_margin"
                android:layout_marginTop="@dimen/half_default_margin"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="?attr/list_title"
                android:textSize="@dimen/ad_body_text_size"
                tools:targetApi="jelly_bean"
                vlc:layout_constraintBottom_toTopOf="@+id/ad_call_to_action"
                vlc:layout_constraintEnd_toEndOf="parent"
                vlc:layout_constraintStart_toEndOf="@+id/ad_media"
                vlc:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/info_default_margin"
                android:layout_marginStart="@dimen/info_default_margin"
                android:background="?attr/button_oval"
                android:gravity="center"
                android:paddingBottom="@dimen/half_default_margin"
                android:paddingLeft="@dimen/info_default_margin"
                android:paddingRight="@dimen/info_default_margin"
                android:paddingTop="@dimen/half_default_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/ad_call_to_action_text_size"
                vlc:layout_constraintBottom_toBottomOf="@+id/ad_media"
                vlc:layout_constraintStart_toEndOf="@+id/ad_media"
                vlc:layout_constraintTop_toBottomOf="@+id/ad_body"/>

        </android.support.constraint.ConstraintLayout>

        <!--video item-->
        <LinearLayout
            android:id="@+id/video_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:onClick="@{holder::onClick}"
            android:onLongClick="@{holder::onLongClick}"
            android:orientation="horizontal"
            android:visibility="@{isAd ? View.GONE : View.VISIBLE}"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_browser_folder"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:textColor="?attr/list_title"
                    android:textSize="@dimen/full_title_text_size"
                    android:text="@{media.title}"
                    />

                <TextView
                    android:id="@+id/item_video_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/video_folder_list_grey"
                    android:textSize="@dimen/default_text_size"
                    android:text="@{time}"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
