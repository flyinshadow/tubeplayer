<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:vlc="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="media"
            type="org.videolan.medialibrary.media.MediaWrapper"/>

        <variable
            name="time"
            type="String"/>

        <variable
            name="bgColor"
            type="int"/>

        <variable
            name="max"
            type="int"/>

        <variable
            name="progress"
            type="int"/>

        <variable
            name="resolution"
            type="String"/>

        <variable
            name="cover"
            type="android.graphics.drawable.BitmapDrawable"/>

        <variable
            name="scaleType"
            type="android.widget.ImageView.ScaleType"/>

        <variable
            name="holder"
            type="com.wenjoyai.tubeplayer.gui.video.VideoListAdapter.ViewHolder"/>

        <variable
            name="selected"
            type="boolean"/>

        <variable
            name="isAd"
            type="boolean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--ad item-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ad_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:visibility="@{isAd ? View.VISIBLE : View.GONE}"
            >

            <LinearLayout
                android:id="@+id/ad_choices_container"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="start"
                android:orientation="horizontal"
                />

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                vlc:layout_constraintStart_toEndOf="@id/ad_choices_container"
                vlc:layout_constraintBottom_toBottomOf="@id/ad_item"
                vlc:layout_constraintTop_toTopOf="@id/ad_item"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:gravity="center"
                android:orientation="vertical"
                vlc:layout_constraintBottom_toBottomOf="@id/ad_item"
                vlc:layout_constraintEnd_toStartOf="@id/ad_call_to_action"
                vlc:layout_constraintStart_toEndOf="@id/ad_icon"
                vlc:layout_constraintTop_toTopOf="@id/ad_item">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#de000000"
                    android:textSize="@dimen/full_title_text_size"/>

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/video_folder_list_grey"
                    android:textSize="@dimen/default_text_size"/>
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/ad_body"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/info_default_margin"-->
            <!--android:layout_marginStart="@dimen/info_default_margin"-->
            <!--android:layout_marginTop="@dimen/half_default_margin"-->
            <!--android:ellipsize="end"-->
            <!--android:fontFamily="sans-serif-light"-->
            <!--android:gravity="center_vertical"-->
            <!--android:maxLines="2"-->
            <!--android:textColor="?attr/list_title"-->
            <!--android:textSize="@dimen/ad_body_text_size"-->
            <!--tools:targetApi="jelly_bean"-->
            <!--vlc:layout_constraintBottom_toTopOf="@+id/ad_call_to_action"-->
            <!--vlc:layout_constraintEnd_toEndOf="parent"-->
            <!--vlc:layout_constraintStart_toEndOf="@+id/ad_media"-->
            <!--vlc:layout_constraintTop_toTopOf="parent"/>-->

            <TextView
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/overlay_margin"
                android:layout_marginRight="@dimen/overlay_margin"
                android:background="?attr/button_oval"
                android:gravity="center"
                android:paddingBottom="@dimen/default_margin"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                android:paddingTop="@dimen/default_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/ad_call_to_action_text_size"
                vlc:layout_constraintTop_toTopOf="@id/ad_item"
                vlc:layout_constraintBottom_toBottomOf="@id/ad_item"
                vlc:layout_constraintEnd_toEndOf="@id/ad_item"/>

        </android.support.constraint.ConstraintLayout>

        <!--video item-->
        <LinearLayout
            android:id="@+id/video_item"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:onClick="@{holder::onClick}"
            android:onLongClick="@{holder::onLongClick}"
            android:orientation="horizontal"
            android:visibility="@{isAd ? View.GONE : View.VISIBLE}"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_browser_folder"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="8sp"
                    android:text="@{media.title}"
                    android:textColor="?attr/list_title"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/full_title_text_size"
                    />

                <TextView
                    android:id="@+id/item_video_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="@{time}"
                    android:textColor="@color/video_folder_list_grey"
                    android:textSize="@dimen/default_text_size"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
