<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vlc="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="media"
            type="org.videolan.medialibrary.media.MediaWrapper" />

        <variable
            name="time"
            type="String" />

        <variable
            name="max"
            type="int" />

        <variable
            name="progress"
            type="int" />

        <variable
            name="resolution"
            type="String" />

        <variable
            name="cover"
            type="android.graphics.drawable.BitmapDrawable" />

        <variable
            name="scaleType"
            type="android.widget.ImageView.ScaleType" />

        <variable
            name="holder"
            type="com.wenjoyai.tubeplayer.gui.video.VideoListAdapter.ViewHolder" />

        <variable
            name="selected"
            type="boolean" />

        <variable
            name="isAd"
            type="boolean" />

    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/background_default_darker"
        android:layout_margin="@dimen/half_default_margin"
        >

        <!--ad item-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ad_item"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:visibility="@{isAd ? View.VISIBLE : View.GONE}"
            tools:layout_editor_absoluteY="85dp"
            tools:layout_editor_absoluteX="8dp">

            <com.facebook.ads.MediaView
                android:id="@+id/ad_media"
                android:layout_width="0dp"
                android:layout_height="0dp"
                vlc:layout_constraintDimensionRatio="H,16:10"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"/>

            <LinearLayout
                android:id="@+id/ad_choices_container"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="start"
                android:orientation="horizontal"
                vlc:layout_constraintStart_toStartOf="@+id/ad_media"
                vlc:layout_constraintTop_toTopOf="@+id/ad_media"
                tools:layout_editor_absoluteX="0dp"/>

            <TextView
                android:id="@+id/ad_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                vlc:layout_constraintEnd_toEndOf="@+id/ad_media"
                vlc:layout_constraintBottom_toBottomOf="@+id/ad_media"
                android:layout_gravity="center_vertical"
                android:background="@color/greytransparent"
                android:padding="@dimen/half_default_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/grid_card_subtitle_text_size"
                tools:layout_editor_absoluteX="368dp"/>

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                vlc:layout_constraintTop_toBottomOf="@+id/ad_media"
                android:layout_marginTop="@dimen/default_margin"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="?attr/list_title"
                android:textSize="@dimen/grid_card_title_text_size"
                tools:targetApi="jelly_bean"
                tools:layout_editor_absoluteX="8dp"/>

        </android.support.constraint.ConstraintLayout>

        <!--video item-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/video_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:onClick="@{holder::onClick}"
            android:onLongClick="@{holder::onLongClick}"
            android:visibility="@{isAd ? View.GONE : View.VISIBLE}"
            tools:layout_editor_absoluteY="85dp"
            tools:layout_editor_absoluteX="8dp">
            <!-- Image loading is handled by com.wenjoyai.tubeplayer.wenjoyai.videoplayer.gui.helpers.AsyncImageLoader.loadPicture() -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ml_item_overlay_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                vlc:layout_constraintDimensionRatio="H,16:10"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp">
                <ImageView
                    android:id="@+id/ml_item_thumbnail"
                    android:layout_width="360dp"
                    android:layout_height="219dp"
                    android:scaleType="@{scaleType}"
                    android:src="@{cover}"
                    android:background="@color/video_cover_background"
                    vlc:media="@{media}"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="8dp"/>
                <ImageView
                    android:id="@+id/ml_item_check"
                    android:layout_width="0dp"
                    android:layout_height="219dp"
                    android:src="@drawable/ic_action_mode_select_1610"
                    android:visibility="@{selected ? View.VISIBLE : View.GONE}"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="8dp"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/ml_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintTop_toBottomOf="@+id/ml_item_overlay_layout"
                vlc:layout_constraintEnd_toStartOf="@+id/item_more"
                vlc:layout_constraintBottom_toTopOf="@+id/ml_item_progress"
                android:layout_marginTop="@dimen/default_margin"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="@{media.title}"
                android:textColor="?attr/list_title"
                android:textSize="@dimen/grid_card_title_text_size"
                tools:targetApi="jelly_bean"
                tools:layout_editor_absoluteX="16dp"/>

            <TextView
                android:id="@+id/ml_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                vlc:layout_constraintEnd_toEndOf="@+id/ml_item_overlay_layout"
                vlc:layout_constraintBottom_toBottomOf="@+id/ml_item_overlay_layout"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:paddingLeft="@dimen/half_default_margin"
                android:paddingRight="@dimen/half_default_margin"
                android:maxLines="1"
                android:text="@{time}"
                android:textColor="@color/white"
                android:textSize="@dimen/grid_card_subtitle_text_size"
                android:background="@color/greytransparent"
                tools:targetApi="jelly_bean"
                tools:layout_editor_absoluteX="368dp"/>

            <!--<TextView-->
            <!--android:id="@+id/ml_item_resolution"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--vlc:layout_constraintBottom_toTopOf="@+id/ml_item_progress"-->
            <!--vlc:layout_constraintEnd_toStartOf="@+id/item_more"-->
            <!--vlc:layout_constraintStart_toEndOf="@+id/ml_item_time"-->
            <!--android:fontFamily="sans-serif-light"-->
            <!--android:gravity="end"-->
            <!--android:singleLine="true"-->
            <!--android:text="@{resolution}"-->
            <!--android:textColor="@color/grey50"-->
            <!--android:textSize="@dimen/grid_card_subtitle_text_size"-->
            <!--tools:targetApi="jelly_bean" />-->

            <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                vlc:layout_constraintTop_toTopOf="@+id/ml_item_title"
                vlc:layout_constraintEnd_toEndOf="parent"
                android:clickable="true"
                android:contentDescription="@string/more_actions"
                android:onClick="@{holder::onMoreClick}"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_more"
                android:visibility="@{isAd ? View.GONE : View.VISIBLE}"
                tools:layout_editor_absoluteX="336dp"/>

            <ProgressBar
                android:id="@+id/ml_item_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                vlc:layout_constraintTop_toBottomOf="@+id/ml_item_title"
                vlc:layout_constraintStart_toStartOf="@+id/ml_item_title"
                vlc:layout_constraintEnd_toStartOf="@+id/item_more"
                vlc:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/half_default_margin"
                android:layout_marginBottom="@dimen/half_default_margin"
                android:focusable="false"
                android:indeterminate="false"
                android:max="@{max}"
                android:maxHeight="@dimen/progress_bar_height"
                android:minHeight="@dimen/progress_bar_height"
                android:progress="@{progress}"
                android:progressDrawable="?attr/gridview_progressbar"
                android:secondaryProgress="0"
                android:visibility="@{progress &gt; 10 ? View.VISIBLE : View.INVISIBLE}"
                tools:layout_editor_absoluteX="16dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
