<?xml version="1.0" encoding="utf-8"?>
<com.wenjoyai.tubeplayer.gui.view.PopupLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/video_pip_width"
    android:layout_height="@dimen/video_pip_height"
    android:background="@color/black"
    android:keepScreenOn="true">

    <SurfaceView
        android:id="@+id/popup_player_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/popup_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_w"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/popup_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/popup_close"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_popup_expand_normal_w"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/video_play_pause"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/popup_expand"
        android:scaleType="center"
        android:src="@drawable/ic_popup_pause"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/popup_seekbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_alignParentBottom="true"
        android:progressDrawable="?attr/po_seekbar"
        android:thumb="@null"
        android:visibility="gone"
        />

</com.wenjoyai.tubeplayer.gui.view.PopupLayout>
